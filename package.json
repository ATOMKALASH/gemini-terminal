{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "gemini-terminal",
  "version": "1.0.0",
  "description": "AI Enhanced Smart Terminal",
  "main": "source/scripts/main.js",

  "scripts": {
    "start": "npm run sass:build && electron .",
    "dev": "npm run sass:watch",
    "build": "npm run sass:build && electron-builder",
    "build:win": "npm run sass:build && electron-builder --win",
    "build:mac": "npm run sass:build && electron-builder --mac",
    "build:linux": "npm run sass:build && electron-builder --linux",
    "pack": "npm run sass:build && electron-builder --dir",
    "dist": "npm run sass:build && electron-builder --publish=never",
    "postinstall": "electron-builder install-app-deps",
    "sass:watch": "sass --watch source/styles/sass/styles.sass:source/styles/css/styles.css --style=compressed --no-source-map",
    "sass:build": "sass source/styles/sass/styles.sass:source/styles/css/styles.css --style=compressed --no-source-map"
  },

  "keywords": [
    "electron",
    "terminal",
    "gemini",
    "shell"
  ],

  "author": "Dustin Angeletti",
  "license": "MIT",

  "devDependencies": {
    "electron": "^38.0.0",
    "electron-builder": "^26.0.20",
    "sass": "^1.92.0"
  },

  "dependencies": {
    "electron-timber": "^1.0.0",
    "dotenv": "^17.2.2"
  },


  "build": {
    "appId": "com.angelettidev.gemini-terminal",
    "productName": "Gemini Terminal",

    "directories": {
      "output": "dist"
    },

    "files": [
      "source/**/*",
      "node_modules/**/*",
      "package.json"
    ],

    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },

    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },

    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  },

  "homepage": ".",
  
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/gemini-terminal.git"
  }
}